# Uncomment this line to define a global platform for your project
# platform :ios, '9.0'

target 'Mercury' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'
  pod 'Firebase/Database'
  pod 'Firebase/Crash'
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'

  # Pods for Mercury

  target 'MercuryTests' do
    inherit! :search_paths
    pod 'Firebase/Core'
    pod 'Firebase/Messaging'
    pod 'Firebase/Database'
    pod 'Firebase/Crash'
    pod 'Firebase/Auth'
    pod 'Firebase/Storage'
    # Pods for testing
  end

  target 'MercuryUITests' do
    inherit! :search_paths
    pod 'Firebase/Core'
    pod 'Firebase/Messaging'
    pod 'Firebase/Database'
    pod 'Firebase/Crash'
    pod 'Firebase/Auth'
    pod 'Firebase/Storage'
    # Pods for testing
  end

end
